@model Laptop.Models.ViewModels.LaptopByBrandOrderingViewModel
<form method="post">
    <div class="row mt-4 mb-4">
        <div class="col-md-5">
            <label asp-for="BrandChoice"></label>
            @Html.DropDownListFor(x => Model.BrandChoice, new SelectList(Model.Brands, "Id", "Name"), new { @class = "form-select" })

        </div>
        <div class="col-md-5">
            <label asp-for="OrderChoice"></label>
            @Html.DropDownListFor(x => Model.OrderChoice , new SelectList(Model.OrderingChoices), "Select Order", new { @class = "form-select" })
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-primary mt-4" />
        </div>
    </div>
    

</form>

@if(Model.BrandChoice != 0){
    <h1> Laptops Ordered</h1>
    <div class="container">
        <table class="table">
            <tdead>
                <tr>
                    <th scope="col">Brand</th>
                    <th scope="col">Model</th>
                    <th scope="col">Price</th>
                    <th scope="col">Year</th>
                    <th scope="col">Id</th>
                </tr>
            </tdead>
            @foreach (var laptop in Model.ResultLaptops)
            {
                <tbody>
                    <tr>
                        <td>@laptop.BrandName</td>
                        <td>@laptop.Model</td>
                        <td>@laptop.Price</td>
                        <td>@laptop.Year</td>
                        <td>@laptop.Id</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
}